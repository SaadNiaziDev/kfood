---
interface Props {
	title: string;
	subtitle?: string;
	align?: "left" | "center" | "right";
	class?: string;
}

const { title, subtitle, align = "center", class: className = "" } = Astro.props;

const alignClasses = {
	left: "text-left",
	center: "text-center",
	right: "text-right",
};
---

<div class={`mb-12 ${alignClasses[align]} ${className}`}>
	<h2 class='text-3xl md:text-4xl font-bold text-kfood-primary mb-2'>
		{title}
	</h2>
	{subtitle && <p class='text-kfood-body text-lg max-w-2xl mx-auto'>{subtitle}</p>}
</div>
