---
interface Props {
  icon: string;
  title: string;
  description: string;
  class?: string;
}

const { icon, title, description, class: className = '' } = Astro.props;
---

<div class={`flex items-start space-x-4 p-4 rounded-lg hover:bg-gray-50 transition-colors ${className}`}>
  <div class="flex-shrink-0 w-12 h-12 bg-[var(--color-kfood-orange)] text-white rounded-lg flex items-center justify-center text-2xl">
    {icon}
  </div>
  <div>
    <h3 class="font-semibold text-[var(--color-kfood-primary)] mb-1">{title}</h3>
    <p class="text-sm text-gray-600">{description}</p>
  </div>
</div>
