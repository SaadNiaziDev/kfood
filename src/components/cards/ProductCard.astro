---
import { Image } from "astro:assets";

import type { ImageMetadata } from "astro";

interface Props {
	name: string;
	weight?: string;
	image?: ImageMetadata;
	class?: string;
}

const { name, weight, image, class: className = "" } = Astro.props;

const imageAlt = name;
---

<div
	class={`product-card bg-white cursor-pointer rounded-card shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden flex flex-col h-full min-h-0 ${className}`}>
	<div class='product-card__image w-full shrink-0 overflow-hidden bg-[#FBF2E0] flex items-center justify-center' style='aspect-ratio: 1/1'>
		<Image src={image!} alt={imageAlt!} class='w-full h-full object-contain' />
	</div>
	<div class='product-card__content p-4 text-center shrink-0'>
		<h3 class='font-semibold text-kfood-body mb-1 font-body'>{name}</h3>
	</div>
</div>
