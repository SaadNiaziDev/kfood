---
import type { ImageMetadata } from "astro";

interface Props {
	title: string;
	excerpt: string;
	date: string;
	category: string;
	imageUrl?: string;
	class?: string;
	image?: ImageMetadata;
}

const { title, excerpt, date, category, imageUrl, class: className = "", image } = Astro.props;

const imageSrc = image?.src;
const imageAlt = title;
---

<div class={`w-full max-w-[288px] mx-auto overflow-hidden rounded-[10px] shadow-md ${className}`}>
	<div class='w-full h-[196px] rounded-t-[10px] overflow-hidden flex items-center justify-center bg-[#013049]'>
		{
			imageSrc ? (
				<img src={imageSrc} alt={title} class='w-full h-full object-cover' />
			) : (
				<div class='text-white/60 text-5xl'>ðŸ“°</div>
			)
		}
	</div>
	<div class='bg-white rounded-b-[10px] px-4 pt-5 pb-6'>
		<span
			class='inline-block px-4 py-1.5 rounded-[20px] text-white mb-3 leading-normal'
			style="background: #D66500; font-family: 'Oswald', sans-serif; font-weight: 500; font-size: 20px;">
			{category}
		</span>
		<h3
			class='mb-2 line-clamp-2'
			style="font-family: 'Oswald', sans-serif; font-weight: 500; font-size: 18px; line-height: 22px; color: #013049;">
			{title}
		</h3>
		<p
			class='mb-4 line-clamp-3'
			style="font-family: 'Josefin Sans', sans-serif; font-weight: 400; font-size: 18px; line-height: 22px; color: #717171;">
			{excerpt}
		</p>
		<p
			class='text-sm'
			style="font-family: 'Josefin Sans', sans-serif; font-weight: 400; font-size: 14px; line-height: 14px; color: #717171;">
			{date}
		</p>
	</div>
</div>
