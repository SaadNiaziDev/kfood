---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  imageUrl?: string;
  class?: string;
}

const { title, excerpt, date, imageUrl, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow ${className}`}>
  <div class="bg-gradient-to-br from-[var(--color-kfood-primary)] to-[var(--color-kfood-green)] h-48 flex items-center justify-center relative">
    {imageUrl ? (
      <img src={imageUrl} alt={title} class="w-full h-full object-cover" />
    ) : (
      <div class="text-white text-6xl">ðŸ“°</div>
    )}
    <div class="absolute top-4 left-4 bg-[var(--color-kfood-orange)] text-white px-3 py-1 rounded-full text-xs font-semibold">
      {date}
    </div>
  </div>
  <div class="p-6">
    <h3 class="font-bold text-[var(--color-kfood-primary)] text-xl mb-2 line-clamp-2">{title}</h3>
    <p class="text-gray-600 text-sm mb-4 line-clamp-3">{excerpt}</p>
    <a href="#" class="text-[var(--color-kfood-orange)] font-semibold text-sm hover:underline">Read more â†’</a>
  </div>
</div>
