---
import type { ImageMetadata } from "astro";

interface Props {
	title: string;
	excerpt: string;
	date: string;
	category: string;
	imageUrl?: string;
	class?: string;
	image?: ImageMetadata;
}

const { title, excerpt, date, category, imageUrl, class: className = "", image } = Astro.props;

const imageSrc = image?.src;
const imageAlt = title;
---

<div class={`w-full  mx-auto overflow-hidden rounded-card shadow-md ${className}`}>
	<div class='w-full rounded-t-card overflow-hidden flex items-center justify-center bg-kfood-primary'>
		{
			imageSrc ? (
				<img src={imageSrc} alt={title} class='w-full h-full object-cover' />
			) : (
				<div class='text-white/60 text-5xl'>ðŸ“°</div>
			)
		}
	</div>
	<div class='bg-white rounded-b-card px-4 pt-5 pb-6'>
		<span class='inline-block px-4 py-1 rounded-2xl text-white mb-3 bg-accent-orange font-heading font-normal'>
			{category}
		</span>
		<h3 class='mb-2 text-xl font font-family-heading !font-semibold text-body-sm text-kfood-primary'>
			{title}
		</h3>
		<p class='mb-6 font-body text-body-sm text-muted'>
			{excerpt}
		</p>
		<p class='text-sm font-body text-muted'>
			{date}
		</p>
	</div>
</div>
