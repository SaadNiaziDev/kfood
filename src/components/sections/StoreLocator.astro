---
import Icon from "../ui/Icon.astro";

const storeTypes = [
	{ label: "Supermarkets", icon: "Supermarket" },
	{ label: "Hypermarkets", icon: "Retailers_store" },
	{ label: "Local Kiryana Stores", icon: "store" },
];

const cities = [
	"Lahore",
	"Faisalabad",
	"Rawalpindi",
	"Gujranwala",
	"Multan",
	"Sialkot",
	"Bahawalpur",
	"Sargodha",
	"Sheikhupura",
	"Rahim Yar Khan",
];
---

<section id='store-locator' class='py-16 lg:py-20 bg-gray-50'>
	<div class='px-6 md:px-10 lg:px-16'>
		<h2 class='text-center text-heading-section mb-8 px-4'>Buy at a Store Near You</h2>
		<div class='flex flex-wrap justify-center gap-4 md:gap-8 lg:gap-16 mb-12'>
			{
				storeTypes.map((type) =>
					type ? (
						<div class='flex items-center gap-2'>
							<Icon icon={type.icon} class='w-6 h-6 md:w-7 md:h-7 shrink-0 text-accent-orange' />
							<span class='text-sm md:text-base lg:text-body-md leading-normal md:leading-[44px] font-medium text-[#858585] font-body'>
								{type.label}
							</span>
						</div>
					) : null,
				)
			}
		</div>

		<div class='store-locator-marquee max-w-6xl mx-auto overflow-hidden py-4' aria-hidden='true'>
			<div class='store-locator-marquee__track flex gap-8 lg:gap-12'>
				{
					cities.map((city) =>
						city ? (
							<span class='store-locator-marquee__city shrink-0 text-base md:text-lg font-body text-kfood-body font-medium'>
								{city}
							</span>
						) : null,
					)
				}
				{
					cities.map((city) =>
						city ? (
							<span class='store-locator-marquee__city shrink-0 text-base md:text-lg font-body text-kfood-body font-medium'>
								{city}
							</span>
						) : null,
					)
				}
			</div>
		</div>
	</div>
</section>

<style>
	.store-locator-marquee__track {
		animation: store-locator-marquee 40s linear infinite;
		width: max-content;
	}
	.store-locator-marquee:hover .store-locator-marquee__track {
		animation-play-state: paused;
	}
	@keyframes store-locator-marquee {
		from {
			transform: translateX(0);
		}
		to {
			transform: translateX(-50%);
		}
	}
</style>
