---
import Icon from '../ui/Icon.astro';

const partnerTypes = [
  {
    icon: 'Retailers',
    title: 'Retailers',
    description: 'Partner with us to stock Kfood products in your stores and supermarkets.',
  },
  {
    icon: 'Distributors',
    title: 'Distributors',
    description: 'Join our distribution network and help us reach more households.',
  },
  {
    icon: 'Institutional_Buyers',
    title: 'Institutional Buyers',
    description: 'Bulk purchasing solutions for hotels, restaurants, and institutions.',
  },
];

const benefits = [
  'Competitive margins',
  'Marketing support',
  'Reliable supply chain',
  'Growing brand recognition',
];
---

<section id="contact" class="relative py-16 lg:py-20 overflow-hidden" style="background: #F9EEE1;">
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex justify-center mb-6">
      <div class="w-[81px] h-[81px] rounded-full flex items-center justify-center" style="background: #013049;">
        <Icon icon="Partner" class="w-[50px] h-[50px] text-white" />
      </div>
    </div>
    <h2
      class="text-center mb-4 text-[50px] leading-[60px] font-medium"
      style="font-family: 'Oswald', sans-serif; color: #013049;">
      Partner with Kfood
    </h2>
    <p
      class="text-center mx-auto mb-12 max-w-[697px] text-[22px] leading-[22px]"
      style="font-family: 'Josefin Sans', sans-serif; color: #717171;">
      Join the KFood family as a retail partner, distributor, or institutional buyer. Grow your business with trusted food products.
    </p>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 max-w-[1370px] mx-auto">
      <div class="lg:col-span-5 space-y-4">
        {partnerTypes.map((item) =>
          item ? (
            <div
              class="bg-white rounded-[10px] p-5 flex gap-4 items-start min-h-[103px]"
            >
              <div
                class="shrink-0 w-14 h-[61px] rounded-[10px] flex items-center justify-center"
                style="background: #013049;"
              >
                <Icon icon={item.icon} class="w-9 h-9 text-white" />
              </div>
              <div class="flex-1 min-w-0">
                <h3
                  class="text-[20px] leading-[60px] font-medium mb-0"
                  style="font-family: 'Oswald', sans-serif; color: #013049;">
                  {item.title}
                </h3>
                <p
                  class="text-[16px] leading-[16px] mt-0"
                  style="font-family: 'Josefin Sans', sans-serif; color: #717171;">
                  {item.description}
                </p>
              </div>
            </div>
          ) : null
        )}
        <div class="bg-[#EBE6DF] rounded-[10px] p-6">
          <h3
            class="text-[20px] leading-[60px] font-medium mb-3"
            style="font-family: 'Oswald', sans-serif; color: #013049;">
            Partnership Benefits
          </h3>
          <ul class="space-y-2 list-none pl-0 m-0">
            {benefits.map((benefit) =>
              benefit ? (
                <li class="flex items-center gap-3" style="font-family: 'Josefin Sans', sans-serif; font-size: 20px; line-height: 35px; color: #717171;">
                  <span class="w-[14px] h-[14px] rounded-full shrink-0" style="background: #013049;"></span>
                  {benefit}
                </li>
              ) : null
            )}
          </ul>
        </div>
      </div>

      <div class="lg:col-span-7">
        <div class="bg-white rounded-[10px] p-8 max-w-[592px]">
          <h3
            class="text-[25px] leading-[60px] font-medium mb-6"
            style="font-family: 'Oswald', sans-serif; color: #013049;">
            Get in Touch
          </h3>
          <form class="space-y-5">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div>
                <label
                  class="block text-[17px] leading-[60px] font-medium mb-1"
                  style="font-family: 'Oswald', sans-serif; color: #013049;">
                  Full Name
                </label>
                <input
                  type="text"
                  class="w-full h-[39px] px-4 rounded-[7px] text-[17px] leading-[17px] outline-none focus:ring-2 focus:ring-[#D66500] focus:ring-offset-0"
                  style="background: #F9EEE1; font-family: 'Josefin Sans', sans-serif; color: #2E2E2E;"
                  placeholder="Your name" class="placeholder-[#C5C5C5]"
                />
              </div>
              <div>
                <label
                  class="block text-[17px] leading-[60px] font-medium mb-1"
                  style="font-family: 'Oswald', sans-serif; color: #013049;">
                  Company Name
                </label>
                <input
                  type="text"
                  class="w-full h-[39px] px-4 rounded-[7px] text-[17px] leading-[17px] outline-none focus:ring-2 focus:ring-[#D66500] focus:ring-offset-0"
                  style="background: #F9EEE1; font-family: 'Josefin Sans', sans-serif; color: #2E2E2E;"
                  placeholder="Your company" class="placeholder-[#C5C5C5]"
                />
              </div>
            </div>
            <div>
              <label
                class="block text-[17px] leading-[60px] font-medium mb-1"
                style="font-family: 'Oswald', sans-serif; color: #013049;">
                Email Address
              </label>
              <input
                type="email"
                class="w-full h-[39px] px-4 rounded-[7px] text-[17px] leading-[17px] outline-none focus:ring-2 focus:ring-[#D66500] focus:ring-offset-0"
                style="background: #F9EEE1; font-family: 'Josefin Sans', sans-serif; color: #2E2E2E;"
                placeholder="you@company.com" class="placeholder-[#C5C5C5]"
              />
            </div>
            <div>
              <label
                class="block text-[17px] leading-[60px] font-medium mb-1"
                style="font-family: 'Oswald', sans-serif; color: #013049;">
                Phone Number
              </label>
              <input
                type="tel"
                class="w-full h-[39px] px-4 rounded-[7px] text-[17px] leading-[17px] outline-none focus:ring-2 focus:ring-[#D66500] focus:ring-offset-0"
                style="background: #F9EEE1; font-family: 'Josefin Sans', sans-serif; color: #2E2E2E;"
                placeholder="+92 000 0000 000" class="placeholder-[#C5C5C5]"
              />
            </div>
            <div>
              <label
                class="block text-[17px] leading-[60px] font-medium mb-1"
                style="font-family: 'Oswald', sans-serif; color: #013049;">
                Message
              </label>
              <textarea
                rows="5"
                class="w-full min-h-[139px] px-4 py-3 rounded-[7px] text-[17px] leading-[17px] outline-none focus:ring-2 focus:ring-[#D66500] focus:ring-offset-0 resize-y"
                style="background: #F9EEE1; font-family: 'Josefin Sans', sans-serif; color: #2E2E2E;"
                placeholder="Tell us about your partnership interest..." class="placeholder-[#C5C5C5]"
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full h-[39px] rounded-[7px] font-medium text-white text-[17px] outline-none hover:opacity-95 transition-opacity"
              style="background: #D66500; font-family: 'Oswald', sans-serif;"
            >
              Send Message
            </button>
            <p
              class="text-[16px] leading-[16px] text-center mt-2"
              style="font-family: 'Josefin Sans', sans-serif; color: #717171;">
              We typically respond within 2 business days.
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
