---
import Button from "../ui/Button.astro";
import Banner from "../../assets/banner.png";
import BannerMobile from "../../assets/banner_sm.png";
import type { ImageMetadata } from "astro";

const banner: ImageMetadata = Banner;
const bannerMobile: ImageMetadata = BannerMobile;
---

<section class='relative w-full h-auto overflow-hidden'>
	<!-- Background Image -->
	<div class='absolute inset-0 z-0'>
		<img src={banner.src} alt='Hero Section' class='w-full h-full object-cover hidden md:block' />
		<img src={bannerMobile.src} alt='Hero Section' class='w-full object-contain block md:hidden' />

		<!-- Dark overlay for better text readability -->
		<div class='absolute inset-0 bg-black/30'></div>
	</div>

	<!-- Content Container -->
	<div class='relative z-10 container mx-auto px-4 h-full min-h-[600px] md:min-h-[700px] flex items-center'>
		<div class='max-w-2xl font-heading px-4'>
			<h1 class='text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight mb-4'>
				From <span class='font-extrabold text-4xl md:text-5xl lg:text-7xl text-white'>Farm</span> to
				<span class='font-extrabold text-4xl md:text-5xl lg:text-7xl text-white'>Table</span>
			</h1>
			<p class='text-lg md:text-2xl lg:text-3xl leading-relaxed text-white font-semibold mb-6'>
				Bringing Nature to Your Plate
			</p>

			<!-- Buttons -->
			<div class='flex flex-col sm:flex-row gap-4 mt-6'>
				<Button variant='primary' size='stretch' class='!bg-kfood-orange !text-white !border-none'>
					Shop Online
				</Button>
				<Button
					variant='accent'
					size='stretch'
					class='!bg-white !text-kfood-primary !border-2 !border-kfood-primary hover:!bg-gray-100'>
					Find a Store
				</Button>
			</div>
		</div>
	</div>
</section>
