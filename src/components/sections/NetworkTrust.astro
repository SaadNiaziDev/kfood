---
import SectionHeading from "../ui/SectionHeading.astro";
import StatCard from "../cards/StatCard.astro";
import { Image } from "astro:assets";
import bgImage from "../../assets/BG2 4.png";

const stats = [
	{ number: "25", label: "Years of Group Expertise", icon: "Reward" },
	{ number: "10", label: "Product Categories", icon: "Products" },
	{ number: "10,000", label: "Farmers in Our Supply Network", icon: "Farmers_Empowerment" },
	{ number: "15", label: "Regions Served", icon: "location_on" },
	{ number: "500", label: "Retail Touchpoints", icon: "Retailers_store" },
];
---

<section class="relative min-h-[523px] overflow-hidden bg-[#F8F2EC] py-12 md:py-16">
	<div
		class="pointer-events-none absolute right-0 top-0 h-full w-full max-w-[1441px] opacity-[0.05]"
		aria-hidden="true">
		<Image
			src={bgImage}
			alt=""
			class="h-full w-full object-cover object-right"
		/>
	</div>

	<div class="container relative z-10 mx-auto px-4">
		<div class="network-trust-heading mb-12">
			<SectionHeading
				title="Network you can trust"
				subtitle="With decades of agricultural expertise, Kfood brings you a promise of quality and nutrition in every product"
			/>
		</div>

		<div class="grid grid-cols-2 gap-6 md:grid-cols-3 lg:grid-cols-5">
			{stats.map((stat) =>
				stat ? (
					<StatCard number={stat.number} label={stat.label} icon={stat.icon} />
				) : null
			)}
		</div>
	</div>
</section>

<style>
	:global(.network-trust-heading h2) {
		font-family: "Oswald", sans-serif;
		font-size: 50px;
		line-height: 60px;
		color: #013049;
	}
	:global(.network-trust-heading p) {
		font-size: 22px;
		line-height: 22px;
		color: #717171;
	}
</style>
