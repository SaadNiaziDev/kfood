---
import SectionHeading from "../ui/SectionHeading.astro";
import StatCard from "../cards/StatCard.astro";
import { Image } from "astro:assets";
import bgImage from "../../assets/BG2 4.png";

const stats = [
	{ number: "25", label: "Years of Group Expertise", icon: "Reward" },
	{ number: "10", label: "Product Categories", icon: "Products" },
	{ number: "10,000", label: "Farmers in Our Supply Network", icon: "Farmers_Empowerment" },
	{ number: "15", label: "Regions Served", icon: "location_on" },
	{ number: "500", label: "Retail Touchpoints", icon: "Retailers_store" },
];
---

<section
	id='network-trust'
	class='bg-cream relative min-h-[400px] md:min-h-[600px] overflow-hidden bg-section-alt py-12 md:py-16
px-6 md:px-10 lg:px-16'>
	<div class='relative z-10 mx-auto px-4'>
		<div class='mb-8 md:mb-12'>
			<SectionHeading
				title='Network you can trust'
				subtitle='With decades of agricultural expertise, Kfood brings you a promise of quality and nutrition in every product'
			/>
		</div>

		<div class='grid grid-cols-2 gap-4 md:gap-6 md:grid-cols-3 lg:grid-cols-5'>
			{stats.map((stat) => (stat ? <StatCard number={stat.number} label={stat.label} icon={stat.icon} /> : null))}
		</div>
	</div>
</section>
