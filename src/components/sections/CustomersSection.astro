---
import { Image } from "astro:assets";
import TestimonialCard from "../cards/TestimonialCard.astro";
import MetroLogo from "../../assets/metro.png";
import CarrefourLogo from "../../assets/carrefour.png";
import ImtiazLogo from "../../assets/imtiaz.png";
import CsdLogo from "../../assets/csd.png";
import JalalSonsLogo from "../../assets/jalal_sons.png";
import RainbowLogo from "../../assets/rainbow.png";

const testimonials = [
	{
		quote:
			"We work as a catalyst for change, bridging the gap between data-driven research and real-world impact. By understanding the needs of rural communities and combining insights with practical solutions, Waseela develops projects that boost productivity, improve livelihoods, and foster sustainable economic growth.",
		customerName: "Metro Foods",
		logoImage: MetroLogo,
	},
	{
		quote:
			"We work as a catalyst for change, bridging the gap between data-driven research and real-world impact. By understanding the needs of rural communities and combining insights with practical solutions, Waseela develops projects that boost productivity, improve livelihoods, and foster sustainable economic growth.",
		customerName: "Jalal Sons",
		logoImage: JalalSonsLogo,
	},
	{
		quote:
			"We work as a catalyst for change, bridging the gap between data-driven research and real-world impact. By understanding the needs of rural communities and combining insights with practical solutions, Waseela develops projects that boost productivity, improve livelihoods, and foster sustainable economic growth.",
		customerName: "Carrefour",
		logoImage: CarrefourLogo,
	},
];

const partnerLogos = [
	{ name: "Jalal Sons", src: JalalSonsLogo },
	{ name: "Carrefour", src: CarrefourLogo },
	{ name: "Rainbow", src: RainbowLogo },
	{ name: "CSD", src: CsdLogo },
	{ name: "Metro Foods", src: MetroLogo },
	{ name: "Imtiaz", src: ImtiazLogo },
];
---

<section class='py-16 lg:py-20 bg-white'>
	<div class='container mx-auto px-4'>
		<h2 class='text-center text-heading-section mb-12 lg:mb-16'>Our Customers</h2>

		<div class='grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12 mb-16 lg:mb-20 max-w-6xl mx-auto'>
			{
				testimonials.map((testimonial) =>
					testimonial ? (
						<TestimonialCard
							quote={testimonial.quote}
							customerName={testimonial.customerName}
							logoImage={testimonial.logoImage}
						/>
					) : null,
				)
			}
		</div>

		<div class='flex flex-wrap justify-center items-center gap-8 lg:gap-12 pt-10 border-t border-gray-200'>
			{
				partnerLogos.map((partner) =>
					partner ? (
						<div class='flex items-center justify-center h-16 lg:h-20 px-6  hover:grayscale-0 opacity-80 hover:opacity-100 transition-all'>
							{partner.src && <Image src={partner.src} alt={partner.name} class='max-h-full w-auto object-contain' />}
						</div>
					) : null,
				)
			}
		</div>
	</div>
</section>
