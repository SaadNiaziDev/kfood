---
import Logo from "../../assets/logo.png";
import type { ImageMetadata } from "astro";
import { Search } from "@lucide/astro";

const logo: ImageMetadata = Logo;
---

<header class="sticky top-0 z-50">
	<div class="h-10 w-full bg-[#013049]"></div>
	<nav
		class="flex min-h-[110px] items-center justify-between bg-[#FBEEE0] px-4 py-4 md:px-10"
		style="font-family: 'Josefin Sans', sans-serif;">
		<a href="/" class="flex shrink-0">
			<img src={logo.src} alt="K Food Logo" class="h-[79px] w-[122px] object-contain" />
		</a>

		<ul class="hidden items-center gap-6 lg:flex xl:gap-8" style="font-size: 15px; line-height: 15px; color: #013049;">
			<li><a href="/" class="hover:opacity-80 transition-opacity">Home</a></li>
			<li><a href="#about-kfood" class="hover:opacity-80 transition-opacity">About KFood</a></li>
			<li class="flex items-center gap-0.5">
				<a href="#products" class="hover:opacity-80 transition-opacity">Products</a>
				<svg class="h-5 w-5 shrink-0 text-[#013049]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M6 9l6 6 6-6"/></svg>
			</li>
			<li class="flex items-center gap-0.5">
				<a href="#network-trust" class="hover:opacity-80 transition-opacity">Our Brands</a>
				<svg class="h-5 w-5 shrink-0 text-[#013049]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M6 9l6 6 6-6"/></svg>
			</li>
			<li><a href="#careers" class="hover:opacity-80 transition-opacity">Careers</a></li>
			<li><a href="#store-locator" class="hover:opacity-80 transition-opacity">Find a Store</a></li>
			<li><a href="#partner-form" class="hover:opacity-80 transition-opacity">Partnerships</a></li>
			<li><a href="#news-section" class="hover:opacity-80 transition-opacity">News</a></li>
		</ul>

		<div class="flex items-center gap-4">
			<a
				href="#"
				class="rounded-[7px] bg-[#013049] px-5 py-2.5 text-white transition-opacity hover:opacity-90"
				style="font-size: 18px; line-height: 18px;">
				Shop Online
			</a>
			<button type="button" class="flex items-center justify-center text-[#013049]" aria-label="Search">
				<Search class="h-6 w-6" color="#013049" />
			</button>
		</div>
	</nav>
</header>
